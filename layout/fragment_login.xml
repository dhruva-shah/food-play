<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/val15"
            android:padding="@dimen/ten_dp_dimens"
            android:src="@drawable/fpbanner"
            android:textColor="@color/black"
            android:textSize="@dimen/biggest_font"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/activity_login_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forty_dp"
            android:layout_marginRight="@dimen/forty_dp"
            android:layout_marginTop="@dimen/ten_dp_dimens"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingBottom="@dimen/twenty_dp_dimens"
            android:paddingTop="@dimen/twenty_dp_dimens"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/big_font"
            android:theme="@style/AppTheme.EditTextRed"
            android:visibility="visible" />


        <EditText
            android:id="@+id/activity_login_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forty_dp"
            android:layout_marginRight="@dimen/forty_dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/twenty_dp_dimens"
            android:paddingTop="@dimen/twenty_dp_dimens"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/big_font"
            android:theme="@style/AppTheme.EditTextRed"
            android:visibility="visible" />

        <Button
            android:id="@+id/activity_login_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eighty_dp"
            android:layout_marginRight="@dimen/eighty_dp"
            android:layout_marginTop="@dimen/twenty_dp_dimens"
            android:background="@drawable/button_bg_red"
            android:paddingBottom="@dimen/ten_dp_dimens"
            android:paddingTop="@dimen/ten_dp_dimens"
            android:singleLine="true"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/default_font"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_login_button_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp_dimens"
            android:gravity="center"
            android:singleLine="true"
            android:padding="@dimen/ten_dp_dimens"
            android:text="Don't have account? SIGN UP here"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font" />



    </LinearLayout>
</ScrollView>