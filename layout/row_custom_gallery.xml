<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/val250"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_custom_gallery_rel_main"
        android:layout_width="@dimen/val250"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/row_custom_gallery_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/row_custom_gallery_textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_row_color"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/row_custom_gallery_image_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_done_black_24dp"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>